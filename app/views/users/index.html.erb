
<h1>Listing Users</h1>

<div class="panel panel-default">
<table class="table table-striped">
<thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Password</th>
      <th>Admin</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.admin %></td>
        <td class="text-right">
          <%= link_to 'Show', user, class: 'btn btn-sm btn-default' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-default' %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
